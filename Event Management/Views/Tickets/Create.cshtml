@model Event_Management.Models.Ticket

@{
    ViewData["Title"] = "Book Your Event";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow" style="background-color:#F5EEDC;">
                <h3 class="text-center mb-4" style="color:#27548A;">🎟️ Book an Event</h3>

                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label class="form-label" style="color:#183B4E;">Choose Event</label>
                        <select asp-for="EventId" asp-items="ViewBag.EventId" class="form-control" required>
                            <option value="">-- Select an Event --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="color:#183B4E;">Ticket Type</label>
                        <input asp-for="TicketType" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="color:#183B4E;">Price</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-warning text-white w-100">✅ Confirm Booking</button>
                        <a href="/" class="btn btn-secondary w-100 mt-2">🏠 Home</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        label {
            font-weight: 500;
        }
    </style>
}
