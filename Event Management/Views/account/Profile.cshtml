@model Event_Management.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow" style="background-color:#F5EEDC;">
                <div class="text-center mb-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" class="rounded-circle" width="100" height="100" alt="Profile Picture" />
                    <h3 class="mt-3" style="color:#27548A;">👤 @Model.FullName</h3>
                    <p class="text-muted">@Model.Email</p>
                    <span class="badge bg-primary">@Model.UserType</span>
                </div>

                <div class="text-center mt-4">
                    <a href="/Account/Logout" class="btn btn-danger w-100 mb-2">🚪 Logout</a>
                    <a href="#" class="btn btn-secondary w-100">✏️ Edit Profile (Coming Soon)</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        img.rounded-circle {
            border: 3px solid #DDA853;
            padding: 5px;
        }

        .card-title {
            font-weight: 700;
        }
    </style>
}
