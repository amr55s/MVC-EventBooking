@{
    ViewData["Title"] = "Login";
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Error</div>
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card p-4 shadow" style="background-color: #F5EEDC; border: 1px solid #ccc; border-radius: 10px;">
                <h3 class="mb-4 text-center" style="color:#27548A;">🔐 Login</h3>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label style="color:#183B4E;">Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                    <div class="form-group mb-4">
                        <label style="color:#183B4E;">Password</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn w-100 text-white" style="background-color: #DDA853;">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        label {
            font-weight: 500;
        }

        .card input {
            border-radius: 5px;
        }

        button.btn:hover {
            background-color: #c68d3f !important;
        }
    </style>
}
